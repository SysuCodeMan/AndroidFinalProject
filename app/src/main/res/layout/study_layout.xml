<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/study_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/head"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkBlue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkBlue"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:text="我的课程"/>
                <TextView
                    android:id="@+id/timetable_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkBlue"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/head"
                android:layout_above="@+id/Buttons">
                <com.example.john.finalproject.myGridView
                    android:id="@+id/timetable_gridview"
                    android:scrollbarStyle="insideOverlay"
                    android:padding="10dp"
                    android:numColumns="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.example.john.finalproject.myGridView>

            </ScrollView>
            <TextView
                android:id="@+id/timetable_hint"
                android:visibility="gone"
                android:textSize="35sp"
                android:text="正在更新。。。"
                android:textColor="@color/Red"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/Buttons"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/study_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/timetable_query"
                    android:layout_above="@+id/study_foot"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5sp"
                    android:textSize="20sp"
                    android:text="查课表"
                    android:textStyle="bold"
                    android:textColor="@color/darkBlue"
                    android:background="@drawable/search_grade_button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/score_query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="@drawable/search_grade_button_background"
                    android:textColor="@color/darkBlue"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:text="查成绩"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/study_foot"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/study_sport_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/sport1"
                    android:background="@color/darkBlue"/>
                <ImageButton
                    android:id="@+id/study_life_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/life1"
                    android:background="@color/darkBlue"/>
                <ImageButton
                    android:id="@+id/study_study_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/study2_1"
                    android:background="@color/darkBlue"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


    <ListView
        android:id="@+id/study_left_drawer"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/darkBlue">

    </ListView>

</android.support.v4.widget.DrawerLayout>