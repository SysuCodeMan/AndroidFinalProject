<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_margin="15dp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textSize="20sp"
                android:textColor="@color/darkBlue"/>
            <TextView
                android:id="@+id/password_dialog_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/darkBlue"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原密码："
                android:textSize="20sp"
                android:textColor="@color/darkBlue"/>
            <EditText
                android:id="@+id/password_dialog_old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/darkBlue"
                android:inputType="textPassword"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码："
                android:textSize="20sp"
                android:textColor="@color/darkBlue"/>
            <EditText
                android:id="@+id/password_dialog_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/darkBlue"
                android:inputType="textPassword"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp">
        <Button
            android:id="@+id/password_dialog_quit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放弃修改"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@color/darkBlue"/>
        <Button
            android:id="@+id/password_dialog_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存修改"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@color/darkBlue"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>

</LinearLayout>